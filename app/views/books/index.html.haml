- if @user == current_user
  %h1.mb-5 My library
- else
  %h1.mb-5= "#{@user.decorate.display_full_name}'s  library"

.border.rounded-lg.shadow-sm
  %table.table.my-books
    %thead.thead-light
      %tr
        %th.p-3 Author
        %th.p-3 Title
        %th.p-3 Status

    %tbody
      - @books.each do |book|
        %tr
          %td.p-3= book.decorate.display_author_name
          %td.p-3= link_to book.title, user_book_path(book.user, book)
          %td.p-3
            .d-inline-flex.align-items-center
              .mr-1= status_icon(book)
              = book.status
