
= render '/layouts/alerts'
%h2.p-5.text-center Log In
= simple_form_for(:user, as: resource_name, url: session_path(resource_name)) do |f|
  .form-inputs
    = f.input :email,
      required: false,
      autofocus: true,
      input_html: { autocomplete: "email" }
    = f.input :password,
      required: false,
      input_html: { autocomplete: "current-password" }
    = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
  .form-actions
    = f.button :submit, "Log In", class: 'btn btn-primary big-button w-100'

.links.text-center
  %p.mt-5.d-inline-block Do not have an account?
  = link_to 'Sign Up', new_registration_path(resource_name)
  %br/

  %p.d-inline-block Or use
  = link_to 'Google Account', user_google_oauth2_omniauth_authorize_path, method: :post
