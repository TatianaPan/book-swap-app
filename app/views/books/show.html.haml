%h1= @book.title

%h2= @book.author

%p= @book.description

%p= @book.status

- if policy(@book).reserve? && @book.status == 'available'
  = link_to 'Reserve', reserve_user_book_path(@user, @book), method: :put, class: 'btn btn-primary'

- if policy(@book).unreserve? && @book.status == 'reserved'
  = link_to 'Unreserve', unreserve_user_book_path(@user, @book), method: :put, class: 'btn btn-primary'

- if policy(@book).edit?
  = link_to 'Edit', edit_user_book_path(@user, @book), class: 'btn btn-primary'

- if policy(@book).destroy?
  = link_to 'Delete', user_book_path(@user, @book), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary'
