- if current_user.present?
  #sidebar-wrapper.bg-light.border-right
    .sidebar-heading.py-3.px-4= current_user.decorate.display_full_name
    .list-group.list-group-flush
      = link_to 'Add new book', new_user_book_path(current_user), class: 'list-group-item list-group-item-action bg-light'

      = link_to 'My Profile', user_path(current_user), class: 'list-group-item list-group-item-action bg-light'

      = link_to 'My library', user_books_path(current_user), class: 'list-group-item list-group-item-action bg-light'

      = link_to 'All users', users_path, class: 'list-group-item list-group-item-action bg-light'

      = link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'list-group-item list-group-item-action bg-light'
    .sidebar-footer.py-3.px-4.position-fixed
      Icons made by
      %a{href: 'https://icons8.com', target: '_blank'}
        icons8.com
